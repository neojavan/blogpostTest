@model IEnumerable<blogPostTest.Models.Post>
    @{
        ViewData["Title"] = "Home Page";
    }
   
    <div class="row">
        @if (Model.Count() > 0)
        {
                    @foreach (var item in Model)
                    {
                        @if (item.PostPublished.HasValue) 
                        { 
                            <div class="container">
                                <div class="card-title"><h2>@item.PostTitle</h2></div>
                                <div class="tab-content">
                                    @item.PostContent
                                    <div>
                                        <p>@Html.DisplayNameFor(m => m.PostPublished) - @item.PostPublished</p>
                                        <p>@Html.DisplayNameFor(m => m.PostUsrId) - @item.PostUsrId</p>
                                    </div>
                                </div>

                            </div>
                        }
                    }
        }
        else
        {
            <p>No existen registros</p>
        }
    </div>
